
@{
    ViewBag.Title = "Index";
}

<h2>Pictures</h2>

<div class="row">
    <div class="col-sm-3">
        <label>Select one</label>
         @Html.DropDownList("Images", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="col-sm-1">
        <label>OR</label>
        <a href="/Pictures/Upload" class="btn btn-success">            
            <span class="glyphicon glyphicon-cloud-upload"> Upload</span>
        </a>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-6">
        <img id="image" src="" alt="" />
        <div id="content"></div>
    </div>     
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#Images").change(function () {
            var imageID = $("#Images").val();
            var url = "/Pictures/GetOne/" + imageID;
            $.get(url, function (data) { 
                $("#image").prop("src", data.thumbnailPath);
            }); 
        });
    });
</script>